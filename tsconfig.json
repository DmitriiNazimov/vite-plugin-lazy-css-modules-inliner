{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "types": ["node", "vite"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
